{
  "name": "@ember/test-waiters",
  "version": "2.1.3",
  "description": "Allow tests to be aware of addon / application asynchrony.",
  "keywords": [
    "ember-addon"
  ],
  "repository": "https://github.com/emberjs/ember-test-waiters",
  "license": "MIT",
  "contributors": [
    "Steve Calvert <steve.calvert@gmail.com>",
    "Robert Jackson <me@rwjblue.com>"
  ],
  "main": "addon/@ember/test-waiters/index.ts",
  "types": "index.d.ts",
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "scripts": {
    "build": "ember build",
    "lint:js": "eslint --ext ts,js .",
    "lint:ts": "tsc -p tsconfig.json --noEmit",
    "prepublishOnly": "ember ts:precompile",
    "postpublish": "ember ts:clean",
    "start": "ember serve",
    "test": "ember test",
    "test:all": "ember try:each",
    "test:node": "qunit node-tests",
    "test:prod": "ember test --environment=production"
  },
  "dependencies": {
    "ember-cli-babel": "^7.21.0",
    "ember-cli-typescript": "^3.1.3",
    "ember-cli-version-checker": "^5.1.1",
    "semver": "^7.1.3"
  },
  "devDependencies": {
    "@ember/optional-features": "^1.3.0",
    "@glimmer/env": "^0.1.7",
    "@types/ember": "^3.16.0",
    "@types/ember-test-helpers": "^1.0.8",
    "@types/ember-testing-helpers": "^0.0.4",
    "@types/ember__test-helpers": "^0.7.9",
    "@types/qunit": "^2.9.1",
    "@types/rsvp": "^4.0.3",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.21.0",
    "ember-cli": "~3.18.0",
    "ember-cli-dependency-checker": "^3.2.0",
    "ember-cli-htmlbars": "^5.1.2",
    "ember-cli-inject-live-reload": "^2.0.2",
    "ember-cli-sri": "^2.1.1",
    "ember-cli-test-loader": "^3.0.0",
    "ember-cli-typescript-blueprints": "^3.0.0",
    "ember-cli-uglify": "^3.0.0",
    "ember-disable-prototype-extensions": "^1.1.3",
    "ember-export-application-global": "^2.0.1",
    "ember-load-initializers": "^2.1.1",
    "ember-maybe-import-regenerator": "^0.1.6",
    "ember-resolver": "^7.0.0",
    "ember-source": "~3.20.4",
    "ember-source-channel-url": "^2.0.1",
    "ember-try": "^1.4.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-ember": "^7.8.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "loader.js": "^4.7.0",
    "prettier": "^1.19.1",
    "qunit": "^2.10.0",
    "release-it": "^13.6.6",
    "release-it-lerna-changelog": "^2.3.0",
    "typescript": "~3.9.2"
  },
  "engines": {
    "node": "10.* || 12.* || >= 14.*"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "ember-addon": {
    "configPath": "tests/dummy/config",
    "main": "index.js"
  },
  "release-it": {
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    }
  }
}
